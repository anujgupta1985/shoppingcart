<% include ../common/header %>
<% include ../common/left %>
    <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">  
              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Data Table With Full Features</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                  <table id="example1" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                      <th>ID</th>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Added Date</th>
                      <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% allUsers.forEach((user) => { %>
                        <tr>
                           <td><%= user._id %></td>
                           <td><%= user.first_name + " " + user.last_name %></td>
                           <td><%= user.email %></td>
                           <td><%= new Date(user.added_date).toLocaleString() %></td>
                        </tr>

                   <% }); %>
                  
                    </tbody>
                    <tfoot>
                    <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Added Date</th>
                            <th>Actions</th>
                    </tr>
                    </tfoot>
                  </table>
                </div>
                <!-- /.box-body -->
              </div>
              <!-- /.box -->
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </section>
    <!-- /.content -->
<% include ../common/footer %>